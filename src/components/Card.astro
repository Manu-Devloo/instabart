---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<li
  class="hover:shadow-cardHover group relative block w-full bg-[#f9fafa] pb-[100%] shadow-card hover:bg-[#F3F4F4]"
>
  <div class="absolute left-0 top-0 h-full w-full">
    <a
      href={href}
      rel="noreferrer noopener"
      class="relative flex h-full w-full flex-col items-center px-3 py-3 text-center no-underline sm:px-5 sm:py-5 md:py-8"
    >
      <span
        class="mb-[3vw] mt-[3vw] text-[5.2vw] font-bold tracking-wide text-gray-800 group-hover:text-gray-900 sm:mb-[2vw] sm:mt-[1vw] sm:text-[3.6vw] md:mb-3 md:mt-0 md:text-[22px]"
      >
        {title}
      </span>
      <div class="flex justify-center text-gray-800 group-hover:text-gray-900">
        <slot />
      </div>
    </a>
  </div>
</li>
