---
import Card from '../components/card/Card.astro';

import IconBlackboard from '../components/icons/IconBlackboard.astro';
import IconBooks from '../components/icons/IconBooks.astro';
import IconDoor from '../components/icons/IconDoor.astro';
import IconDumbbell from '../components/icons/IconDumbbell.astro';
import IconGraduationCap from '../components/icons/IconGraduationCap.astro';
import IconLanguage from '../components/icons/IconLanguage.astro';
import IconMap from '../components/icons/IconMap.astro';
import IconMicrosoft365 from '../components/icons/IconMicrosoft365.astro';
import IconPaperPlane from '../components/icons/IconPaperPlane.astro';
import IconPdf from '../components/icons/IconPdf.astro';
import IconPrinter from '../components/icons/IconPrinter.astro';

import ScheduleCard from './ScheduleCard.astro';
import { getCurrentLanguage } from '../utils/i18n.ts';

// Import translation files
import noTranslations from '../locales/no.json';
import enTranslations from '../locales/en.json';

const currentLang = getCurrentLanguage();
const translations = currentLang === 'en' ? enTranslations : noTranslations;
---

<Card
  href="https://innsida.ntnu.no/blackboard"
  title={translations.cards.blackboard}
  id="blackboard"
>
  <IconBlackboard />
</Card>

<Card
  href="https://outlook.office365.com/owa/?realm=ntnu.no#path=/mail"
  title={translations.cards.email}
  id="email"
>
  <IconPaperPlane />
</Card>

<ScheduleCard />

<Card href="http://innsida.ntnu.no/o365" title={translations.cards.office365} id="microsoft365">
  <IconMicrosoft365 />
</Card>

<Card
  href="https://fsweb.no/studentweb/index.jsf?inst=FSNTNU"
  title={translations.cards.studentweb}
  id="studentweb"
>
  <IconGraduationCap />
</Card>

<Card
  href="https://tp.educloud.no/ntnu/app/rombestilling/"
  title={translations.cards.roomReservation}
  id="room_reservation"
>
  <IconDoor />
</Card>

<Card href="http://use.mazemap.com/?campuses=ntnu" title={translations.cards.map} id="map">
  <IconMap />
</Card>

<Card href="https://myprint.ntnu.no/" title={translations.cards.printing} id="printing"
  ><IconPrinter />
</Card>

<Card
  href="https://www.ntnu.no/ub"
  title={translations.cards.literatureSearch}
  id="literature_search"
>
  <IconBooks />
</Card>

<Card href="https://pdf.orakel.ntnu.no/" title={translations.cards.pdf} id="pdf">
  <IconPdf />
</Card>

<Card
  href="https://www.ordnett.no/gyldendal/login/gyldendal"
  title={translations.cards.dictionary}
  id="dictionary"
>
  <IconLanguage />
</Card>

<Card href="https://www.sit.no/trening/booking" title={translations.cards.exercise} id="exercise">
  <IconDumbbell />
</Card>
