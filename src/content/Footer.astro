---
import DialogOpen from '../components/dialog/DialogOpen.astro';
import IconCog from '../components/icons/IconCog.astro';
import IconInfo from '../components/icons/IconInfo.astro';
import ThemePicker from '../components/ThemePicker.astro';
import Wrap from '../components/Wrap.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<footer class="border-solid py-4 lg:mt-10 lg:border-t dark:border-slate-700">
  <Wrap>
    <div
      class="items-left mx-auto flex w-[160px] flex-col sm:w-auto sm:flex-row sm:justify-center lg:justify-between"
    >
      <ThemePicker />
      <div class="items-left flex flex-col sm:flex-row">
        <DialogOpen dialogId="schedule-settings" id="schedule-dialog-trigger">
          <IconCog />
          {t('footer.schedule_settings')}
        </DialogOpen>
        <DialogOpen dialogId="about-dialog" id="about-dialog-trigger">
          <IconInfo />
          {t('footer.about')} {t('site.title')}
        </DialogOpen>
      </div>
    </div>
  </Wrap>
</footer>
